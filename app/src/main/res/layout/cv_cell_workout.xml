<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    android:layout_height="120dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/person_photo"-->
<!--            android:layout_alignParentLeft="true"-->
<!--            android:layout_alignParentTop="true"-->
<!--            android:layout_marginRight="16dp"-->
<!--            />-->

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/workout_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/avatar_training"
            app:civ_border="true"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="3dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="3dp"
            app:civ_shadow_color="#3f51b5"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workout_name"
            android:layout_toRightOf="@+id/workout_avatar"
            android:layout_alignParentTop="true"
            android:text="Biceps - EZ bar Cur"
            android:textSize="18sp"
            android:textColor="#424242"
            android:fontFamily="@font/formular_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workout_repeats"
            android:layout_toRightOf="@+id/workout_avatar"
            android:layout_below="@+id/workout_name"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/formular_regular"
            android:text="4 SER | 12 REP " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workout_repos"
            android:layout_toRightOf="@+id/workout_avatar"
            android:layout_below="@+id/workout_repeats"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/formular_regular"
            android:text="Repos: 1 min" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>