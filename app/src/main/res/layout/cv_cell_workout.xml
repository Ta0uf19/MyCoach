<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/person_photo"-->
<!--            android:layout_alignParentLeft="true"-->
<!--            android:layout_alignParentTop="true"-->
<!--            android:layout_marginRight="16dp"-->
<!--            />-->

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/avatar_training"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar_training"
            app:civ_border="true"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10dp"
            app:civ_shadow_color="#3f51b5"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_name"
            android:layout_toRightOf="@+id/avatar_training"
            android:layout_alignParentTop="true"
            android:text="Biceps - EZ bar Cur"
            android:textSize="18sp"
            android:textColor="#424242"
            android:fontFamily="@font/formular_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_age"
            android:layout_toRightOf="@+id/avatar_training"
            android:layout_below="@+id/person_name"
            android:fontFamily="@font/formular_medium"
            android:text="4 SER | 12 REP " />

    </RelativeLayout>

</androidx.cardview.widget.CardView>